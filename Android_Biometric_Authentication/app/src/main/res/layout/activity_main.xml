<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="136dp"
        android:layout_height="159dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lockimage" />

    <TextView
        android:id="@+id/textView_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:textSize="22sp"
        android:text="Click button to authenticate"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/button_auth"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="75dp"
        android:drawableLeft="@drawable/ic_baseline_fingerprint_24"
        android:text="Authenticate"
        app:layout_constraintEnd_toEndOf="@+id/textView_auth"
        app:layout_constraintStart_toStartOf="@+id/textView_auth"
        app:layout_constraintTop_toBottomOf="@+id/textView_auth" />
</androidx.constraintlayout.widget.ConstraintLayout>